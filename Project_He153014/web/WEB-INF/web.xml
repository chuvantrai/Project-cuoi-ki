<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisteredController</servlet-name>
        <servlet-class>controller.RegisteredController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GioithieuController</servlet-name>
        <servlet-class>GioithieuController.GioithieuController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailtintucController</servlet-name>
        <servlet-class>TintucController.DetailtintucController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailThongtinbdsController</servlet-name>
        <servlet-class>ThongtinbdsController.DetailThongtinbdsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlltintucController</servlet-name>
        <servlet-class>TintucController.AlltintucController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllthongtinbdsController</servlet-name>
        <servlet-class>ThongtinbdsController.AllthongtinbdsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>YeucauController</servlet-name>
        <servlet-class>controller.YeucauController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListyeucauController</servlet-name>
        <servlet-class>AdminController.ListyeucauController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisteredController</servlet-name>
        <url-pattern>/registered</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GioithieuController</servlet-name>
        <url-pattern>/gioithieu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetailtintucController</servlet-name>
        <url-pattern>/tintuc/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetailThongtinbdsController</servlet-name>
        <url-pattern>/thongtinbds/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlltintucController</servlet-name>
        <url-pattern>/tintuc/tatca</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllthongtinbdsController</servlet-name>
        <url-pattern>/thongtinbds/tatca</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>YeucauController</servlet-name>
        <url-pattern>/yeucau</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListyeucauController</servlet-name>
        <url-pattern>/listyeucau</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            3600
        </session-timeout>
    </session-config>
</web-app>
